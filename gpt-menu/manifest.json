{
  "manifest_version": 3,
  "name": "Send to ChatGPT",
  "version": "1.0",
  "description": "Send highlighted text to ChatGPT",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.openai.com/*",
    "https://*.chatgpt.com/*"
],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
} 